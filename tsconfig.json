{
  "compilerOptions": {
    "target": "ES2019",                 // ou ES2020+
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2019", "DOM"],           // garante suporte a Generator, Object.entries, Map, Set, etc.
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
